{
  "env": {
    "worker": true,
    "jest/globals": true
  },
  "globals": {
    "guest": "readonly"
  },
  "extends": "airbnb-base",
  "plugins": [
    "jest"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "arrow-body-style": "off",
    "comma-dangle": "off",
    "no-console": "warn",
    "no-param-reassign": "off",
    "no-restricted-globals": "off",
    "quote-props": ["error", "consistent"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "max-len": ["error", { "code": 120, "tabWidth": 2, "ignoreTemplateLiterals": true, "ignoreStrings": true }]
  }
}
